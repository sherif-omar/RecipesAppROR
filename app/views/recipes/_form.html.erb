 <%= form_for(@recipe,html: { multipart: true}) do |f| %>
    <div class="panel-body">
        <div class="form form-horizontal">
            <div class="col-md-12">
                <div class="form-group">
                    <%= f.text_field :name, placeholder: "Name Recipe", :class => "form-control"%>    
                </div>
                <div class="form-group">
                    <%= f.text_field :summary, placeholder: "Enter Summary for Recipe", :class => "form-control"%>    
                </div>
            
                <div class="form-group">
                    <%= f.text_area :description, placeholder: "Description for Recipe",
                            rows: 10,:class => "form-control"%>    
                </div>
                <div class="form-group">
                    <p class="lead">Image Recipe:</p> 
                    <%= f.file_field :picture, accept: "image/gif,image/jpeg,image/png",
                        :class => "form-control col-md-6"%>
                </div/>
                <div class="form-group">
                        <%= f.submit "Submit", :class => "btn btn-success btn-block"%>    
                </div>
            </div>
        </div>
    </div>
<% end %>

<script type="text/javascript">
    $('#recipe_picture').bind("change",function(){
       file_in_megabytes = this.files[0].size/1024/1024;
       
       if (file_in_megabytes > 5){
           alert("Please select another image.");
       }
    });
</script>